.talk-comment-box
  width: 100%
  background: silver
  overflow: auto

  .talk-comment-focus-image
    float: left
    max-width: 150px

  .talk-comment-form
    float: left
    width: 100%

    textarea
      box-sizing: border-box
      width: 100%
      height: 150px

  .talk-comment-buttons-container
    display: block
    float: left
    width: 100%

  .talk-comment-children
    float: left
    width: 100%

  .talk-comment-image-item
    float: left

    button
      display: block
      margin: 0 auto
